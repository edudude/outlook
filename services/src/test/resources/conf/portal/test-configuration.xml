<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <!-- Anaplan components -->

  <component>
    <key>org.exoplatform.anaplan.AnaplanService</key>
    <type>org.exoplatform.anaplan.AnaplanServiceImpl</type>
    <init-params>
      <properties-param>
        <name>anaplan-configuration</name>
        <property name="api-url" value="https://api.fake/" />
        <property name="base-url" value="https://base.fake" />
      </properties-param>
    </init-params>
  </component>
  
  <component>
    <key>org.exoplatform.anaplan.jcr.NodeFinder</key>
    <type>org.exoplatform.anaplan.jcr.JCRNodeFinder</type>
  </component>

  <import>classpath:/conf/portal/test-jcr-configuration.xml</import>
  <import>classpath:/conf/portal/test-organization-configuration.xml</import>

</configuration>